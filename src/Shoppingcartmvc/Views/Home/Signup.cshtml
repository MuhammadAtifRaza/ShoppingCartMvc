@model Shoppingcartmvc.Models.User

@{
    ViewData["Title"] = "Signup";
}
@if (ViewBag.Message != null && ViewBag.Message != "")
{
    <h3 class="alert-info">@ViewBag.Message</h3>
}

<h2>Signup</h2>

<form asp-action="Signup">
    <div class="form-horizontal">
       
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <div class="form-group">
           
            <div class="col-md-offset-2 col-md-10">
                <input asp-for="Username" class="form-control"placeholder="User Name" />
                <span asp-validation-for="Username" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
           
            <div class="col-md-offset-2 col-md-10">
                <input asp-for="Password" class="form-control"placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger" />
            </div>
        </div>
        
        <div class="form-group">
            
            <div class="col-md-offset-2 col-md-10">
                <input asp-for="Email" class="form-control" placeholder="Email"/>
                <span asp-validation-for="Email" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Signup" class="btn btn-success" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
