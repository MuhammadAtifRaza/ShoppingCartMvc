@model Shoppingcartmvc.Models.Category

@{
    ViewData["Title"] = "Category";
}

<h2>Category</h2>
@if (ViewBag.Message != null && ViewBag.Message != "")
{
    <h3 class="alert-info">@ViewBag.Message</h3>
}


<form asp-action="Category">
    <div class="form-horizontal">
        <h6>Category</h6>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <div class="form-group">
           
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" placeholder="Add Category"/>
                <span asp-validation-for="Name" class="text-danger" />
            </div>
        </div>
       
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Subcategory">Add Sub_Category</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
